<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autolabel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/food_search_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5_dp"
            android:paddingLeft="@dimen/_10_dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/color_93286C"
            android:background="@drawable/line_food"
            android:textSize="@dimen/_15_dp"
            android:hint="음식명"/>

        <Button
            android:id="@+id/food_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15_dp"
            android:text="검색"/>
    </LinearLayout>
    <ListView
        android:id="@+id/food_search_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.greencross.gctemperlib.gngcare.common.MaxHeightScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        autolabel:mhs_maxHeight="@dimen/_300_dp">

        <com.dpizarro.autolabel.library.AutoLabelUI
            android:id="@+id/label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5_dp"
            android:layout_marginRight="@dimen/_5_dp"
            android:layout_marginTop="@dimen/_15_dp"
            android:layout_marginBottom="@dimen/_15_dp"
            autolabel:label_clickable="true"/>

    </com.greencross.gctemperlib.gngcare.common.MaxHeightScrollView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_30_dp"
        android:paddingRight="@dimen/_30_dp"
        android:paddingTop="@dimen/_9_dp"
        android:paddingBottom="@dimen/_9_dp"
        android:layout_margin="@dimen/_5_dp"
        android:gravity="center"
        android:background="@drawable/mother_health_btn1"
        android:textAlignment="center"
        android:textSize="@dimen/_13_dp"
        android:text="@string/recent_keyowrd"
        android:textColor="@color/color_93286C"
        android:fontFamily="@font/hi_gothic_m"/>




    <ListView
        android:id="@+id/food_search_keyword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/_5_dp"/>


</LinearLayout>
