<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        style="@style/common_parent_style"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/weight_targer_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/hi_maum_r"
                    style="@style/common_textview_fields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/_15_dp"
                    android:text="@string/text_goal_height"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etWeightTargetWg"
                    android:layout_width="wrap_content"
                    android:layout_weight="5"
                    android:hint="78"
                    android:inputType="number"
                    style="@style/common_edittext_style"

                    android:enabled="false"
                    android:paddingRight="15dp"/>

                <TextView
                    android:fontFamily="@font/hi_maum_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="kg"
                    style="@style/common_textview_ea"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_metrytime"
                android:layout_weight="1"
                android:textSize="@dimen/_15_dp"
                android:layout_marginTop="10dp"
                style="@style/common_textview_fields"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:id="@+id/weight_input_date_textview"
                style="@style/common_edittext_style"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:cursorVisible="false"
                android:inputType="none"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="2016.05.20 금요일"
                android:tag=""/>

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:id="@+id/weight_input_time_textview"
                style="@style/common_edittext_style"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:cursorVisible="false"
                android:inputType="none"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="오전 11:40"
                android:tag=""/>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_weight"
                android:layout_weight="1"
                style="@style/common_textview_fields"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etWeightWg"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:hint="60.5"
                android:inputType="numberDecimal"
                style="@style/common_edittext_style"

                android:paddingRight="15dp"
                />

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="kg"
                style="@style/common_textview_ea"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_bodyfatrate"
                android:layout_weight="1"
                style="@style/common_textview_fields"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/etWeightBodyRate"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:hint="38"
                android:text="38"
                android:inputType="numberDecimal"
                style="@style/common_edittext_style"

                android:paddingRight="15dp"
                />

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="%"
                style="@style/common_textview_ea"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:id="@+id/CFontTextView9"
                style="@style/common_textview_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_bodyfatvolume"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/etWeightInnerVolume"
                style="@style/common_edittext_style"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:hint="75"
                android:text="75"
                android:inputType="numberDecimal"
                android:paddingRight="15dp"

                />

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="%"
                style="@style/common_textview_ea"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_stomachrate"
                android:layout_weight="1"
                style="@style/common_textview_fields"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/etWeightWaterVolume"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:hint="55"
                android:text="55"
                android:inputType="numberDecimal"
                style="@style/common_edittext_style"

                android:paddingRight="15dp"
                />

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="%"
                style="@style/common_textview_ea"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_musclevolume"
                android:layout_weight="1"
                style="@style/common_textview_fields"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/etWeightMuscleVolume"
                style="@style/common_edittext_style"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:hint="1212"
                android:text="121"
                android:inputType="numberDecimal"
                android:paddingRight="15dp"

                />

            <TextView
                android:fontFamily="@font/hi_maum_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="%"
                style="@style/common_textview_ea"/>
        </LinearLayout>

        <Button
            android:id="@+id/weight_input_save_btn"
            style="@style/common_save_button_input"
            android:layout_marginTop="50dp"
            android:enabled="false" />

    </LinearLayout>

</ScrollView>
