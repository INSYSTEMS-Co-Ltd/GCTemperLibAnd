<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="missingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/title_lv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_14_dp"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/_200_dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/main_logo" />

<!--            <TextView-->
<!--                android:id="@+id/title_tv"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:gravity="center"-->
<!--                android:text="@string/app_name_kr"-->
<!--                android:textColor="@color/txt_dark_bold"-->
<!--                android:textSize="@dimen/_20_dp"-->
<!--                android:fontFamily="@font/hi_maum_r" />-->
        </LinearLayout>

        <FrameLayout
            android:id="@+id/alram_lv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/menu_btn">

        <ImageButton
            android:id="@+id/alram_btn"
            android:layout_width="@dimen/_50_dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/main_notice" />


        <ImageView
            android:id="@+id/alram_new"
            android:layout_width="@dimen/_14_dp"
            android:layout_height="@dimen/_14_dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/_36_dp"
            android:src="@drawable/main_notice_new"
            android:visibility="visible" />

        </FrameLayout>



        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/_14_dp"
            android:paddingLeft="@dimen/_10_dp"
            android:background="@null"
            android:src="@drawable/btn_menu" />

        <FrameLayout
            android:id="@+id/actionbar_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/alram_lv"
            android:layout_toRightOf="@+id/title_lv">

            <ImageView
                android:id="@+id/img_new"
                android:layout_width="@dimen/_14_dp"
                android:layout_height="@dimen/_14_dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/_21_dp"
                android:layout_marginRight="@dimen/_14_dp"
                android:src="@drawable/icon_board_new"
                android:visibility="gone" />
        </FrameLayout>




    </RelativeLayout>

</RelativeLayout>