<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="missingPrefix"
    android:id="@+id/bg_action_bar"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/txt_dark_bold">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/left_btn"
            android:layout_width="@dimen/_48_dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@null"
            android:src="@drawable/btn_back_white" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/empty_data"
            android:textColor="@color/color_100ffffff"
            android:textSize="@dimen/px_50"
            android:fontFamily="@font/hi_maum_r" />

        <RelativeLayout
            android:id="@+id/right_layout"
            android:layout_width="@dimen/_57_dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <FrameLayout
                android:id="@+id/bg_baby_face"
                android:layout_width="@dimen/_36_dp"
                android:layout_height="@dimen/_36_dp"
                android:layout_centerVertical="true"
                android:background="@drawable/baby_photo_bg">

                <ImageView
                    android:id="@+id/photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_3_dp"
                    android:scaleType="centerCrop" />
            </FrameLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>