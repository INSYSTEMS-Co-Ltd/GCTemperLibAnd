<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="missingPrefix"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/date_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1_dp"
            android:background="@color/bg_gray" />

        <TextView
            android:id="@+id/txt_day_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_3_dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_gray7"
            android:textSize="@dimen/_15_dp"
            android:textStyle="bold"
            android:fontFamily="@font/hi_gothic_b"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1_dp"
            android:background="@color/bg_gray" />
    </LinearLayout>

    <com.daimajia.swipe.SwipeLayout xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <LinearLayout
            android:layout_width="@dimen/_50_dp"
            android:layout_height="wrap_content"
            android:background="@color/bg_yellow_dark"
            android:gravity="center"
            android:tag="trash"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/trash"
                android:layout_width="@dimen/_27_dp"
                android:layout_height="@dimen/_30_dp"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/trash" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_history_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/_50_dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_history_mark"
                    android:layout_width="@dimen/_25_dp"
                    android:layout_height="@dimen/_35_dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_result" />

                <TextView
                    android:id="@+id/txt_type_item"
                    android:layout_width="@dimen/_50_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8_dp"
                    android:layout_marginRight="@dimen/_16_dp"
                    android:textColor="@color/color_gray7"
                    android:textSize="@dimen/_15_dp"
                    android:fontFamily="@font/hi_gothic_m" />

                <TextView
                    android:id="@+id/txt_date_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8_dp"
                    android:layout_marginRight="@dimen/_16_dp"
                    android:textColor="@color/color_gray7"
                    android:textSize="@dimen/_15_dp"
                    android:fontFamily="@font/hi_gothic_m" />

                <TextView
                    android:id="@+id/txt_content_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_8_dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/_3_dp"
                    android:textColor="@color/color_gray7"
                    android:textSize="@dimen/_15_dp"
                    android:fontFamily="@font/hi_gothic_m" />

            </LinearLayout>


        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>