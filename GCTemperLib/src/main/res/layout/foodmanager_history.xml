<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_food_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radiogroup_period_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_47_dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_food_type_day"
            style="@style/pink_graph_radio_style_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textColor="@color/mother_btn_tab2_color"
            android:checked="true"
            android:text="일간"
            android:textSize="@dimen/px_46"
            android:textStyle="bold"
            android:fontFamily="@font/hi_maum_l" />

        <RadioButton
            android:id="@+id/radio_food_type_week"
            style="@style/pink_graph_radio_style_middle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textColor="@color/mother_btn_tab2_color"
            android:text="주간"
            android:textSize="@dimen/px_46"
            android:textStyle="bold"
            android:fontFamily="@font/hi_maum_l" />

        <RadioButton
            android:id="@+id/radio_food_type_month"
            style="@style/pink_graph_radio_style_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textColor="@color/mother_btn_tab2_color"
            android:text="월간"
            android:textSize="@dimen/px_46"
            android:textStyle="bold"
            android:fontFamily="@font/hi_maum_l" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D7D7D9" />

    <ScrollView
        android:id="@+id/view_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F5F5F5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/btn_hiscalLeft"
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:background="@null"
                        android:gravity="center_horizontal"
                        android:src="@drawable/cal_arrow_left" />


                    <TextView
                        android:id="@+id/txtCurrDate"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="2016.12.12"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_14_dp"
                        android:fontFamily="@font/hi_maum_r" />


                    <ImageButton
                        android:id="@+id/btn_hiscalRight"
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:background="@null"
                        android:gravity="center_horizontal"
                        android:src="@drawable/cal_arrow_right" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/chart_close_btn"
                    android:layout_width="@dimen/_40_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/zoom_close"/>

                <ImageView
                    android:id="@+id/landscape_btn"
                    android:layout_width="@dimen/_40_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_15_dp"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/zoom" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/chart_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-1dp"
                        android:text="kcal"
                        android:textColor="@color/color_676767"
                        android:textSize="@dimen/_10_dp"
                        android:fontFamily="@font/hi_maum_r" />

                    <com.greencross.gctemperlib.greencare.charting.charts.BarChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/visible_layout_2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15_dp"
                    android:layout_marginRight="@dimen/_15_dp"
                    android:layout_marginTop="@dimen/_15_dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_takecal"
                                style="@style/common_textview_dark_nobottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="0 kcal"
                                android:textColor="@color/color_E1147F"
                                android:textSize="@dimen/_16_dp"
                                android:fontFamily="@font/hi_maum_r" />

                            <TextView
                                style="@style/common_textview_dark_nobottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="/"
                                android:textColor="@color/color_676767"
                                android:textSize="@dimen/_16_dp"
                                android:fontFamily="@font/hi_maum_r" />

                            <TextView
                                android:id="@+id/txt_recomcal"
                                style="@style/common_textview_dark_nobottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="0 kcal"
                                android:textColor="@color/color_676767"
                                android:textSize="@dimen/_16_dp"
                                android:fontFamily="@font/hi_maum_r" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="(섭취 칼로리 / 권장 칼로리)"
                            android:textSize="@dimen/_16_dp"
                            android:fontFamily="@font/hi_maum_r" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right">

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/visible_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_F5F5F5"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_150_dp"
                    android:layout_marginBottom="@dimen/_10_dp"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:layout_marginRight="@dimen/_10_dp"
                    android:layout_marginTop="@dimen/_15_dp"
                    android:background="@drawable/mom_round10_backgroud"
                    android:paddingLeft="@dimen/_20_dp"
                    android:paddingRight="@dimen/_20_dp"
                    android:paddingTop="@dimen/_10_dp"
                    android:paddingBottom="@dimen/_10_dp">

                    <TextView
                        android:id="@+id/result_tip_textview"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_20_dp"
                        android:paddingRight="@dimen/_20_dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_979797"
                        android:textSize="@dimen/_14_dp"
                        android:fontFamily="@font/hi_gothic_l"
                        tools:text="fdfdfd"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_20_dp"
                        android:background="@color/color_979797" />

                    <LinearLayout
                        android:id="@+id/tip_lv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50_dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/btn_tip_1"/>

                        <ImageView
                            android:layout_width="@dimen/_60_dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10_dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/btn_tip"/>

                    </LinearLayout>



                </LinearLayout>


                <TextView
                    android:id="@+id/food_cal_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/text_week_avg_balance"
                    android:textSize="@dimen/_15_dp"
                    android:fontFamily="@font/hi_maum_r" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:duplicateParentState="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/common_textview_fields"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:textSize="@dimen/_15_dp"
                            android:text="아침"
                            android:fontFamily="@font/hi_maum_r" />


                        <!--아침밥 칼로리 -->
                        <TextView
                            android:id="@+id/food_cal_breakfast"
                            style="@style/common_textview_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical|right"
                            android:textSize="@dimen/_12_dp"
                            android:text="300 kal"
                            android:fontFamily="@font/hi_maum_r" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:duplicateParentState="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/common_textview_fields"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:textSize="@dimen/_15_dp"
                            android:text="점심"
                            android:fontFamily="@font/hi_maum_r" />

                        <!--점심밥 칼로리 -->
                        <TextView
                            android:id="@+id/food_cal_lunch"
                            style="@style/common_textview_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical|right"
                            android:textSize="@dimen/_12_dp"
                            android:text="300 kal"
                            android:fontFamily="@font/hi_maum_r" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:duplicateParentState="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/common_textview_fields"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:textSize="@dimen/_15_dp"
                            android:text="저녁"
                            android:fontFamily="@font/hi_maum_r" />

                        <!--저녁밥 칼로리 -->
                        <TextView
                            android:id="@+id/food_cal_dinner"
                            style="@style/common_textview_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical|right"
                            android:textSize="@dimen/_12_dp"
                            android:text="300 kal"
                            android:fontFamily="@font/hi_maum_r" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/visible_layout_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_F5F5F5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/food_minute_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/text_week_avg_time"
                    android:textSize="@dimen/_15_dp"
                    android:fontFamily="@font/hi_maum_r" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:duplicateParentState="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/common_textview_fields"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:textSize="@dimen/_15_dp"
                            android:text="아침"
                            android:fontFamily="@font/hi_maum_r" />

                        <!--아침밥 시간-->
                        <TextView
                            android:id="@+id/food_minute_blackfast"
                            style="@style/common_textview_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical|right"
                            android:textSize="@dimen/_12_dp"
                            android:text="20분"
                            android:fontFamily="@font/hi_maum_r" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:duplicateParentState="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/common_textview_fields"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:textSize="@dimen/_15_dp"
                            android:text="점심"
                            android:fontFamily="@font/hi_maum_r" />

                        <!--점심밥 시간-->
                        <TextView
                            android:id="@+id/food_minute_lunch"
                            style="@style/common_textview_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical|right"
                            android:textSize="@dimen/_12_dp"
                            android:text="30분"
                            android:fontFamily="@font/hi_maum_r" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:duplicateParentState="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/common_textview_fields"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:textSize="@dimen/_15_dp"
                            android:text="저녁"
                            android:fontFamily="@font/hi_maum_r" />

                        <!--저녁밥 시간-->
                        <TextView
                            android:id="@+id/food_minute_dinner"
                            style="@style/common_textview_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical|right"
                            android:textSize="@dimen/_12_dp"
                            android:text="40분"
                            android:fontFamily="@font/hi_maum_r" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/visible_layout_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_F5F5F5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/food_radar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/_15_dp"
                    android:text="@string/text_week_nutri_balance"
                    android:fontFamily="@font/hi_maum_r" />

                <com.greencross.gctemperlib.greencare.charting.charts.RadarChart
                    android:id="@+id/radar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/color_F5F5F5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Hcall_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:background="@drawable/mother_btn">

                <TextView
                    android:id="@+id/Hcall_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/diet_icon1"
                    android:drawablePadding="@dimen/_5_dp"
                    android:textAlignment="center"
                    android:text="@string/상담연결하기"
                    android:fontFamily="@font/hi_gothic_m"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_15_dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
