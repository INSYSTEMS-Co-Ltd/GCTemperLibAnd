                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hi_maum_r"
                                android:layout_marginLeft="5dp"
                                android:text="-분"
                                android:textSize="@dimen/_14_dp"
                                android:textColor="@color/color_95246D"/>


                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
