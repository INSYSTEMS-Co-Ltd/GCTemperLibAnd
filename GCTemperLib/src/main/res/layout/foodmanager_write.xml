<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_food_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF3FB"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:paddingLeft="8dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/txtCurrDate"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/hi_maum_r"
                    android:gravity="center"
                    android:text="2016.12.12"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14_dp"/>


                <ImageButton
                    android:id="@+id/btn_calLeft"
                    android:layout_width="30dp"
                    android:layout_height="27dp"
                    android:layout_alignTop="@+id/txtCurrDate"
                    android:layout_toStartOf="@+id/txtCurrDate"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:src="@drawable/cal_arrow_left"/>

                <ImageButton
                    android:id="@+id/btn_calRight"
                    android:layout_width="30dp"
                    android:layout_height="27dp"
                    android:layout_alignTop="@+id/txtCurrDate"
                    android:layout_toEndOf="@+id/txtCurrDate"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:src="@drawable/cal_arrow_right"/>
            </RelativeLayout>

            <com.greencross.gctemperlib.greencare.food.FoodHistoryProgress
                android:id="@+id/food_history_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_20_dp"
                android:background="@color/colorWhite"
                android:paddingTop="@dimen/_20_dp">
            </com.greencross.gctemperlib.greencare.food.FoodHistoryProgress>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_30_dp"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/food_low_circle"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="@dimen/_20_dp"
                    android:fontFamily="@font/hi_gothic_m"
                    android:textColor="@color/color_FFBD39"
                    android:textSize="12dp"
                    android:text="부족"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/food_standard_circle"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="@dimen/_20_dp"
                    android:fontFamily="@font/hi_gothic_m"
                    android:textColor="@color/color_00B15A"
                    android:textSize="12dp"
                    android:text="적정"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/food_over_circle"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="@dimen/_45_dp"
                    android:fontFamily="@font/hi_gothic_m"
                    android:textColor="@color/color_E7000C"
                    android:textSize="12dp"
                    android:text="과잉"/>

            </LinearLayout>


            <LinearLayout
