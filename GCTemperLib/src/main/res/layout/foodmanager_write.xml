                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hi_maum_r"
                                android:text="저녁"
                                android:textSize="@dimen/_14_dp"
                                android:textAlignment="textEnd"
                                android:textColor="@color/color_95246D"/>

                            <TextView
                                android:id="@+id/tvTime03"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="5"
                                android:fontFamily="@font/hi_maum_r"
                                android:text="-분"
                                android:textSize="@dimen/_14_dp"
                                android:textColor="@color/color_95246D"/>

                            <ImageView
                                android:id="@+id/icon_time_dinner"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:src="@drawable/icon_time"
                                android:visibility="gone"
                                />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20_dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.coordinatorlayout.widget.CoordinatorLayout
                            android:id="@+id/coordinatorLayout_2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_89_dp"
                            android:layout_marginLeft="@dimen/_20_dp"
