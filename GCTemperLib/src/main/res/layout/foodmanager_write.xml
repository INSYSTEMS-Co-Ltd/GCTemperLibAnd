                            <!--아침 간식이미지-->

                            <ImageView
                                android:id="@+id/food_breakfest_snack_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:visibility="visible">
                            </ImageView>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/food_block"
                                android:scaleType="centerCrop"
