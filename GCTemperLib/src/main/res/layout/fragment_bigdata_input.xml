<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    style="@style/common_parent_style"
    android:background="@color/color_ffffff"
    android:orientation="vertical">
    <!-- 엄마 체중 측정 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15_dp"
        android:fontFamily="@font/hi_maum_r"
        android:textSize="@dimen/_20_dp"
        android:text="@string/mother_health_how_pregnant_weight"
        android:textColor="@color/color_AF4C8C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/hi_gothic_m"
        android:textSize="@dimen/_14_dp"
        android:textAlignment="center"
        android:text="@string/mother_health_how_pregnant_weight2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_30_dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20_dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mom_weight_week_et"
                style="@style/common_edittext_style"
                android:background="@drawable/rectangle_95246d"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/hi_maum_r"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:text="14"
                android:textColor="@color/color_AF4C8C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10_dp"
                android:layout_marginRight="@dimen/_10_dp"
                android:fontFamily="@font/hi_gothic_m"
                android:gravity="center_vertical"
                android:text="@string/week"
                android:textColor="@color/txt_dark_gray" />

            <EditText
                android:id="@+id/mom_weight_kg"
                style="@style/common_edittext_style"
                android:background="@drawable/rectangle_95246d"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/hi_maum_r"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/color_AF4C8C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10_dp"
                android:layout_marginRight="@dimen/_10_dp"
                android:fontFamily="@font/hi_gothic_m"
                android:gravity="center_vertical"
                android:text="@string/kg"
                android:textColor="@color/txt_dark_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/bigdata_recent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_25_dp"
            android:fontFamily="@font/hi_gothic_m"
            android:textSize="@dimen/_14_dp"
            android:text="@string/mother_health_recent_weight" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:id="@+id/bigdata_img"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_30_dp"
                    android:src="@drawable/weight_bigdata_icon_old"
                    android:adjustViewBounds="true"
                    app:layout_constraintHeight_percent="0.25"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/show_result_button"
                    style="@style/common_save_button_input"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/bigdata_img"
                    android:layout_height="@dimen/_40_dp"
                    android:layout_marginTop="@dimen/_20_dp"
                    android:background="@drawable/rectangle_round_95246d"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:fontFamily="@font/hi_gothic_m"
                    android:textSize="@dimen/_15_dp"
                    android:text="결과보기"
                    android:textColor="@color/color_AF4C8C"
                    app:layout_constraintTop_toBottomOf="@id/bigdata_img"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hi_gothic_m"
            android:textSize="@dimen/_13_dp"
            android:text="※ 임신부 체중 빅데이터를 활용하여 예상 체중을 보여드립니다.\n※ 예측을 위해 입력하신 임신 주수와 체중은 저장되지 않습니다." />
    </LinearLayout>
</LinearLayout>
