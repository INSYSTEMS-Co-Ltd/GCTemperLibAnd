<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/temper_notice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6972d1"
        android:fontFamily="@font/hanam"
        android:gravity="center"
        android:lineSpacingExtra="0sp"
        android:paddingTop="19dp"
        android:paddingBottom="19dp"
        android:text="헬스케어서비스는 모두의 건강 카드 신청자에 한하여 제공합니다."
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/hanab"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="11sp"
                android:text="전문 의료진 건강상담(무료)"
                android:textColor="#6972d1"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingLeft="52dp"
                    android:paddingRight="@dimen/_52_dp"
                    android:src="@drawable/health_care_image1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hanam"
                            android:gravity="center_horizontal"
                            android:lineSpacingExtra="2sp"
                            android:text="헬스콜센터\n1차 건강상담"
                            android:textColor="#707070"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hanam"
                            android:gravity="center_horizontal"
                            android:lineSpacingExtra="13sp"
                            android:text="*필요시 전문의 상담연결"
                            android:textColor="#a2a2a2"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="45dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hanam"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="2sp"
                        android:text="전문의 상담\n가정의학과, 내과 등\n전문의 그룹"
                        android:textColor="#707070"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="사소한 궁금증부터 건강 고민이 생겼을 때 전화상담을 받아보세요."
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/draw_circle_707070"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="10sp"
                android:text="가정의학과, 내과, 소아과 등 전문의 전화상담"
                android:textColor="#707070"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/draw_circle_707070"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="10sp"
                android:text="임상경험이 풍부한 간호사 전화상담"
                android:textColor="#707070"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/draw_circle_707070"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="10sp"
                android:text="영양사, 운동관리사, 심리상담사 등 전문가 전화상담"
                android:textColor="#707070"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/hearthcare_call_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:src="@drawable/hn_counselling_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/hanab"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="11sp"
                android:text="대형병원안내 및 진료예약대행(무료)"
                android:textColor="#6972d1"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="37dp"
                android:adjustViewBounds="true"
                android:src="@drawable/health_care_image2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="건강이 의심되거나 치료가 필요할 때 병원 및 의료진\n안내, 진료예약 대행을 제공해 드립니다."
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/draw_circle_707070"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="10sp"
                android:text="증상에 따른 건강 상담 및 진료과 안내"
                android:textColor="#707070"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/draw_circle_707070"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="10sp"
                android:text="분야별 병원 의료진 안내"
                android:textColor="#707070"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/draw_circle_707070"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="10sp"
                android:text="주요 5대 대형병원 및 전국 30여개 종합병원 진료 예약 대행"
                android:textColor="#707070"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/hearthcare_call_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:src="@drawable/hn_counselling_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/hanab"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="11sp"
                android:text="건강정보 제공"
                android:textColor="#6972d1"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="37dp"
                android:adjustViewBounds="true"
                android:src="@drawable/health_care_image3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="평상시 건강관리를 위해 믿을 수 있는 전문 건강정보 제공 받아보세요."
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/draw_circle_707070"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="4sp"
                android:text="맞춤 건강정보 및 건강 뉴스레터 발송"
                android:textColor="#707070"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/hanam"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="4sp"
                android:text="(월1회 카카오 알림톡 발송)"
                android:textColor="#707070"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>