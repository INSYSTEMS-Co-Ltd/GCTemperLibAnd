<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_100ffffff"
    android:orientation="vertical"
    tools:context="com.gc.lib.com.greencross.gctemperlib.gngcare.gngcare.main.MainActivity">


    <ImageView
        android:id="@+id/intro_image"
        android:layout_width="@dimen/_180_dp"
        android:layout_height="@dimen/_200_dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_80_dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/splash_logo" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_30_dp"
        android:src="@drawable/splash_logo2" />


</RelativeLayout>
