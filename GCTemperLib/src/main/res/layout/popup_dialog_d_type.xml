<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:ignore="missingPrefix">

    <!-- 백그라운드 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_30_dp"
        android:layout_marginRight="@dimen/_30_dp"
        android:background="@drawable/background_5_ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50_dp"
            android:background="@color/color_fec0e7"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_18_dp"
            android:fontFamily="@font/hi_maum_r" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_30_dp"
                android:layout_marginRight="@dimen/_30_dp"
                android:layout_marginTop="@dimen/_30_dp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_4_dp"
                android:text="content"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/_20_dp"
                android:fontFamily="@font/hi_maum_r" />

            <LinearLayout
                android:id="@+id/dialog_d_type_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_content"
                android:layout_marginLeft="@dimen/_30_dp"
                android:layout_marginRight="@dimen/_30_dp"
                android:layout_marginTop="@dimen/_30_dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/dialog_edit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50_dp"
                    android:paddingRight="@dimen/_15_dp"
                    android:layout_marginRight="@dimen/_10_dp"
                    android:layout_weight="0.7"
                    android:layout_gravity="bottom"
                    android:background="@drawable/mother_edittext_bg02"
                    android:gravity="right|center_vertical"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:textSize="@dimen/_25_dp"
                    android:fontFamily="@font/hi_gothic_m" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/_3_dp"
                    android:gravity="bottom"
                    android:lineSpacingExtra="@dimen/_4_dp"
                    android:text="kg"
                    android:textColor="@color/color_969696"
                    android:textSize="@dimen/_25_dp"
                    android:fontFamily="@font/hi_gothic_m" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_b_type_button_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75_dp"
                android:layout_below="@+id/dialog_d_type_edit_layout"
                android:layout_marginTop="@dimen/_25_dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_25_dp"
                    android:layout_marginLeft="@dimen/_30_dp"
                    android:layout_marginRight="@dimen/_5_dp"
                    android:layout_weight="1"
                    android:background="@drawable/psy_btn_bg_01"
                    android:text="@string/popup_dialog_button_cancel"
                    android:textColor="@color/color_333333_btn"
                    android:textSize="@dimen/_18_dp"
                    android:fontFamily="@font/hi_gothic_b" />

                <Button
                    android:id="@+id/confirm_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_25_dp"
                    android:layout_marginLeft="@dimen/_5_dp"
                    android:layout_marginRight="@dimen/_30_dp"
                    android:layout_weight="1"
                    android:background="@drawable/psy_btn_bg_02"
                    android:text="@string/popup_dialog_button_save"
                    android:textColor="@color/color_f8f5f0_btn"
                    android:textSize="@dimen/_18_dp"
                    android:fontFamily="@font/hi_gothic_b" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>