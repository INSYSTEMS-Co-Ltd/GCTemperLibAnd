<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:ignore="missingPrefix">

    <!-- 백그라운드 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_15_dp"
        android:layout_marginRight="@dimen/_15_dp"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30_dp"
            android:layout_marginRight="@dimen/_30_dp"
            android:layout_marginTop="@dimen/_30_dp"
            android:gravity="center"
            android:textColor="@color/color_48496B"
            android:text="title"
            android:textSize="@dimen/_20_dp"
            android:visibility="visible"
            android:fontFamily="@font/hi_maum_r" />

        <TextView
            android:id="@+id/dialog_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30_dp"
            android:layout_marginRight="@dimen/_30_dp"
            android:layout_marginTop="@dimen/_6_dp"
            android:textSize="@dimen/_13_dp"
            android:visibility="gone"
            android:fontFamily="@font/hi_gothic_b" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_30_dp"
                android:layout_marginRight="@dimen/_30_dp"
                android:layout_marginTop="@dimen/_30_dp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_4_dp"
                android:text="content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_16_dp"
                android:fontFamily="@font/hi_gothic_m"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_55_dp"
                android:layout_marginLeft="@dimen/_55_dp"
                android:layout_marginTop="@dimen/_45_dp"
                android:layout_marginBottom="@dimen/_45_dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                tools:src="@drawable/diet2" />

            <Button
                android:id="@+id/detail_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35_dp"
                android:layout_marginRight="@dimen/_55_dp"
                android:layout_marginLeft="@dimen/_55_dp"
                android:layout_below="@+id/iv1"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/color_48496B"
                android:background="@drawable/background_d8d8d8"
                android:fontFamily="@font/hi_gothic_m"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_15_dp"
                android:text="이벤트 자세히 보기"/>




            <LinearLayout
                android:id="@+id/dialog_b_type_button_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50_dp"
                android:layout_below="@+id/detail_btn"
                android:layout_marginTop="@dimen/_30_dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_EC7620"
                    android:text="오늘은 그만보기"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_16_dp"
                    android:fontFamily="@font/hi_gothic_b" />

                <Button
                    android:id="@+id/confirm_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_48496B"
                    android:text="@string/popup_dialog_button_confirm"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_16_dp"
                    android:fontFamily="@font/hi_gothic_b" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>