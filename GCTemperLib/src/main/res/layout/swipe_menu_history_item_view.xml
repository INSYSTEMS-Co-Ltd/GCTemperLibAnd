<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="25dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_centerVertical="true"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/sugar_history_item_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_15_dp"
            android:text="장치"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/sugar_history_item_sugar_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,340"
                android:textColor="@color/colorBlack"
                android:textSize="17dp"/>
            <!--android:fontFamily="@font/kelson_sans_regular"-->

            <TextView
                android:id="@+id/sugar_history_item_mldl_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="mmHg"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"/>
            <!--android:fontFamily="@font/kelson_sans_regular"-->
            <TextView
                android:id="@+id/sugar_history_item_before_after_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="식전"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"/>
            <!--android:fontFamily="@font/kelson_sans_regular"-->

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"

        >

        <TextView
            android:id="@+id/sugar_history_item_time_textview"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/_14_dp"
            android:text="0000.00.00 00:00"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/open_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_left"/>
    </RelativeLayout>
</LinearLayout>