<!--                    <TextView-->
<!--                        android:id="@+id/temper_notice_message"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="15dp"-->
