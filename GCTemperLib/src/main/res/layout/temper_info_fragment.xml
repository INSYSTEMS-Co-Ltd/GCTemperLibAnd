<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:gravity="center_horizontal"
                android:letterSpacing="0.07"
                android:lineSpacingExtra="10sp"
                android:text="올바른 감염 예방"
                android:textColor="#222222"
                android:fontFamily="@font/hanam"
                android:textSize="21sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="11dp"
                android:gravity="center_horizontal"
                android:letterSpacing="0.07"
                android:lineSpacingExtra="10sp"
                android:text="@string/title_올바른감염예방2"
                android:fontFamily="@font/hanam"
                android:textColor="#6972d1"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/_35_dp"
                android:src="@drawable/hn_temper_info_map_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20_dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="5sp"
                    android:text="01"
                    android:textColor="#6972d1"
                    android:fontFamily="@font/hanab"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.8"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="5sp"
                    android:fontFamily="@font/notosans_m"
                    android:text="열지도로 지역 평균체온을 확인하고\n주기적인 발열 체크로 올바른 감염 예방에\n앞장서 보세요."
                    android:textColor="#888888"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_30_dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="5sp"
                    android:text="02"
                    android:fontFamily="@font/hanab"
                    android:textColor="#6972d1"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.8"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="5sp"
                    android:fontFamily="@font/notosans_m"
                    android:text="검진기관 추천과 예약 그리고 검진 프로그램\n안내, 검진결과 누적 제공 및 사후관리\n서비스를 받아보세요."
                    android:textColor="#888888"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30_dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="5sp"
                    android:text="03"
                    android:fontFamily="@font/hanab"
                    android:textColor="#6972d1"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.8"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="5sp"
                    android:fontFamily="@font/notosans_m"
                    android:text="내과, 외과, 산부인과, 치과 등 14개과\n전문의 상담과 병원 및 의료진 안내,\n진료예약 대행을 제공해 드립니다."
                    android:textColor="#888888"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/temper_info_gone_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="#003dc6"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="15sp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="@font/hanam"
            android:text="다시 보지 않기" />

        <TextView
            android:id="@+id/temper_info_start_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="#434b56"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="15sp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="@font/hanam"
            android:text="시작하기" />
    </LinearLayout>

</LinearLayout>
