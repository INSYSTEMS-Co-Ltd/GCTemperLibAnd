<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/click_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/wheel_main_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_206_dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff">

        <!-- 상단 레이아웃 -->
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_52_dp"
            android:background="@color/color_6bb0d7">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/color_ac66bc"
                android:textSize="14dp" />

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="@dimen/_100_dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:text="@string/popup_dialog_button_confirm"
                android:textColor="@color/color_ffffff_btn"
                android:textSize="@dimen/_14_dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/margin_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1_dp"
            android:layout_below="@+id/top_layout"
            android:background="@color/color_ebeae5" />

        <!-- 생년월일 레이아웃 -->
        <LinearLayout
            android:id="@+id/birth_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_154_dp"
            android:layout_below="@+id/margin_view"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_30_dp"
                android:layout_marginRight="@dimen/_30_dp"
                android:orientation="horizontal">

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/year"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_14_dp" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/month"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_14_dp" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/day"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_14_dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 키 레이아웃 -->
        <LinearLayout
            android:id="@+id/height_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_154_dp"
            android:layout_below="@+id/margin_view"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_30_dp"
                android:layout_marginRight="@dimen/_30_dp"
                android:orientation="horizontal">

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_height_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="."
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_14_dp" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_height_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/cm"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_14_dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 몸무게 레이아웃 -->
        <LinearLayout
            android:id="@+id/weight_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_154_dp"
            android:layout_below="@+id/margin_view"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_30_dp"
                android:layout_marginRight="@dimen/_30_dp"
                android:orientation="horizontal">

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_weight_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="."
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_14_dp" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_weight_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/kg"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_15_dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 몸무게 레이아웃 -->
        <LinearLayout
            android:id="@+id/head_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_154_dp"
            android:layout_below="@+id/margin_view"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_30_dp"
                android:layout_marginRight="@dimen/_30_dp"
                android:orientation="horizontal">

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_head_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="."
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_14_dp" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_head_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/cm"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_15_dp" />
            </LinearLayout>
        </LinearLayout>


        <!-- 활동량 시간 레이아웃 -->
        <LinearLayout
            android:id="@+id/active_time_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_154_dp"
            android:layout_below="@+id/margin_view"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_30_dp"
                android:layout_marginRight="@dimen/_30_dp"
                android:orientation="horizontal">

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_active_time_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/hour"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_14_dp" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_active_time_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/minute"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_15_dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 음식사진 등록시간 레이아웃 -->
        <LinearLayout
            android:id="@+id/food_update_time_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_154_dp"
            android:layout_below="@+id/margin_view"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_30_dp"
                android:layout_marginRight="@dimen/_30_dp"
                android:orientation="horizontal">

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_food_update_time_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_food_update_time_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/hour_2"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_14_dp" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_food_update_time_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/minute"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_15_dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 걷기 목표 레이아웃 -->
        <LinearLayout
            android:id="@+id/step_goal_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_154_dp"
            android:layout_below="@+id/margin_view"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_step_goal_1"
                    android:layout_width="@dimen/_100_dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5_dp"
                    android:text=","
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_14_dp"
                    android:visibility="gone" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/wheel_step_goal_2"
                    android:layout_width="@dimen/_50_dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5_dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:gravity="center_vertical"
                    android:text="@string/step"
                    android:textColor="@color/color_42413e"
                    android:textSize="@dimen/_15_dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>