<resources>

    <!-- Base application theme. -->
    <style name="GCLibTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/color_100ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="fontFamily">@font/notosans_m</item>
    </style>

    <style name="hn_toolbar_title_textview" parent="Widget.AppCompat.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- toolbar 사용시 actionbar 비활성화 -->
    <style name="GCLibTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#6972d1</item>
        <item name="colorPrimaryDark">#6972d1</item>
        <item name="colorAccent">#6972d1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <!-- 팝업 다이얼로그 테마 -->
    <style name="popup_custom_theme" parent="android:Theme">
        <item name="android:windowBackground">@color/color_20000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- 투명한 배경 -->
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- 투명한 배경 메인팝업 -->
    <style name="Theme.Transparent_main" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="Theme.MyDialog" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
