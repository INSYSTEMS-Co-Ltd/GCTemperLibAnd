<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
            <Button
                android:id="@+id/gc_lib_reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="데이터초기화"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"/>

            <!-- 인증키 등록 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증 등록"
                android:textColor="@android:color/holo_blue_dark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인증토큰 : "/>
                <EditText
                    android:id="@+id/lib_token_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="라이브러리 인증토큰"/>
            </LinearLayout>

            <Button
                android:id="@+id/gc_token_regist_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="인증하기"/>

            <!-- 고객번호 등록 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고객번호 등록"
                android:textColor="@android:color/holo_blue_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고객번호 : "/>
                <EditText
                    android:id="@+id/cust_no_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"/>
            </LinearLayout>

            <Button
                android:id="@+id/cust_no_regist_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="고객번호 등록"/>

            <!-- 푸시키 등록 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Push 토큰 등록"
                android:textColor="@android:color/holo_blue_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="푸시토큰 : "/>
                <EditText
                    android:id="@+id/push_token_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1111"/>
            </LinearLayout>

            <Button
                android:id="@+id/push_token_regist_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="푸시토큰 등록"/>


            <!-- 푸시키 등록 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체온 등록"
                android:textColor="@android:color/holo_blue_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="체온 : "/>
                <EditText
                    android:id="@+id/temper_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="35"/>
            </LinearLayout>

            <Button
                android:id="@+id/temper_regist_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="체온 등록"/>



            <!-- 체온관리 실행 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체온관리"
                android:textColor="@android:color/holo_blue_dark"/>

            <Button
                android:id="@+id/gc_excute_gc_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="녹십자 체온관리 실행"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알람설정"
                android:textColor="@android:color/holo_blue_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right">
                <Switch
                    android:id="@+id/alram_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="측정 독려 알림 수신" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right">
                <Switch
                    android:id="@+id/alram_type_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역 체온 알림 수신" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <!-- 프로그래스 -->
    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>